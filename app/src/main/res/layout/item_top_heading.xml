<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutTopHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageSourceFramework"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:src="@drawable/rectangle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

            <LinearLayout
                android:id="@+id/layoutTopHeadingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="@+id/imageSourceFramework"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textTopHeadingDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="2020/03/23"/>

            </LinearLayout>

        <ImageView
            android:id="@+id/imageTopHeading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/rectangle"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageSourceFramework"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/imageTopHeading"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageSourceFramework">

            <TextView
                android:id="@+id/textTopHeadingTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="호날두날강두"/>

            <TextView
                android:id="@+id/textTopHeadingContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="12sp"
                tools:text="리오넬 메시 호날두와 만나"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/textTopHeadingMedia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="www.google.com" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>